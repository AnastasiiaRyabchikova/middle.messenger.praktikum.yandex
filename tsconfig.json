{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "es2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "templator": ["./src/templator"],
      "classnames": ["./src/utils/classnames"],
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*"]
}
